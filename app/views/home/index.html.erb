<div class="grid">
    <section class="card">
        <h3>Parts to buy</h3>
        <ul>
            <% @parts.each do |part| %>
                <li>
                    <strong><%= -part.remaining_quantity %>&times;</strong>
                    <%= part.part_type %> <%= part.value %>
                </li>
            <% end %>
        </ul>

        <%= link_to "All parts", parts_path %>
    </section>
    <%= render @projects %>
    <%= render 'projects/form', project: Project.new, locals: {form_class: 'card'} %>
</div>
